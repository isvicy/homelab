apiVersion: v1
kind: Pod
metadata:
  name: kube-vip
  namespace: kube-system
spec:
  containers:
    - name: kube-vip
      image: ghcr.io/kube-vip/kube-vip:v0.9.1
      args:
        - manager
      env:
        - name: address
          value: {{ control_plane_endpoint }}
        - name: vip_arp
          value: "true"
        - name: cp_enable
          value: "true"
        - name: vip_leaderelection
          value: "true"
        - name: lb_enable
          value: "true"
        - name: vip_leaseDuration
          value: "30s"
        - name: vip_renewDeadline
          value: "20s"
        - name: vip_retryPeriod
          value: "5s"
        - name: vip_lb_health_port      # probe every backend
          value: "6443"
        - name: vip_lb_health_path
          value: "/readyz"
        - name: vip_lb_health_interval  # seconds between probes
          value: "3"
        - name: vip_lb_health_failed_threshold
          value: "3"        # drop after a single failure
      securityContext:
        capabilities:
          add:
            - NET_ADMIN
            - NET_RAW
      volumeMounts:
        - mountPath: /etc/kubernetes/admin.conf
          name: kubeconfig
  hostAliases:
    - hostnames:
        - kubernetes
      ip: 127.0.0.1
  hostNetwork: true
  volumes:
    - hostPath:
        path: {{ k3s_kubeconfig_file }}
      name: kubeconfig
